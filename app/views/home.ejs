<%- include('partials/header') %>

<main>
        <form action="/add" class="form" method="post">
            <input class="form_input" type="text" name="todofield" id="todofield" placeholder="Ajouter un élément à la to-do">
        </form>

        <% if(locals.session.todolist.length) { %>
            <div class="todolist">
                <ul>
            <% for (const index in locals.session.todolist) { %>
                    <li class="todolist__li"> <input class="check" type="checkbox" name="check" id="check"> <span class="span"><%= locals.session.todolist[index] %></span><a class="link" href="/remove/<%= index %>">&#10060;</a></li>
            <% } %>
                </ul>
            </div>
        <% } %>


</main>

<%- include('partials/footer') %>